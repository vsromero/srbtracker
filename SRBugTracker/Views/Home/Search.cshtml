@model IEnumerable<SRBugTracker.ViewModels.SearchResultViewModel>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>
<div class="list-group">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Details", item.Type, new { id = item.Id })" class="list-group-item list-group-item-action">
            <h5>@item.Name</h5>
            <p>@item.Description</p>
        </a>
    }
</div>
