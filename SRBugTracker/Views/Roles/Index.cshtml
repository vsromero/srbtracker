@model IEnumerable<SRBugTracker.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row mt-5">
    <div class="col">
        <div class="card shadow">
            <div class="card-header bg-light border-0">
                <h3 class="mb-0">Roles</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-light table-flush">
                    <thead class="">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
                            <th>@Html.DisplayNameFor(model => model.ConcurrencyStamp)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => role.Name)</td>
                            <td>@Html.DisplayFor(modelItem => role.NormalizedName)</td>
                            <td>@Html.DisplayFor(modelItem => role.ConcurrencyStamp)</td>
                            <td class="text-right">
                                <div class="dropdown">
                                    <a class="btn btn-sm btn-icon-only" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                        <a asp-action="Edit" asp-route-id="@role.Id" class="dropdown-item">Edit</a>
                                        <a asp-action="Details" asp-route-id="@role.Id" class="dropdown-item">Details</a>
                                        <a asp-action="Delete" asp-route-id="@role" class="dropdown-item">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>